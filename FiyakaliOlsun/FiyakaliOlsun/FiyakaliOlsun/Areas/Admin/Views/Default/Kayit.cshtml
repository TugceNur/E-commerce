@model FiyakaliOlsun.Areas.Admin.ViewModels.DefaultKayit
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Enter Email" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Username)
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "Enter Username" })
    </div>
    <div class="form-group">
        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Enter Password" })
        </div>
    </div>
    <input type="submit" value="Register" class="btn btn-primary btn-block" />
}
<div class="text-center">
    <a class="d-block small mt-3" href="@Url.Action("Index", "Default")">Login Page</a>
</div>