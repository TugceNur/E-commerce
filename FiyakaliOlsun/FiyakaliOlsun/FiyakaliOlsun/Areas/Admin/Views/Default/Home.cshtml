@model FiyakaliOlsun.Areas.Admin.ViewModels.DefaultHome

<h1>Users</h1>
<a href="@Url.Action("Kayit")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-plus"></i>Create User</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model.Kullanici)
        {
            <tr>
                <td>@admin.Id</td>
                <td>@admin.KullaniciAdi</td>
                <td>@admin.email</td>
                <td>
                    <div class="btn-group">
                        <a href="@Url.Action("Edit",new { admin.Id } )" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-edit"></i>Edit</a>
                        <a href="@Url.Action("ResetPassword",new { admin.Id } )" class="btn btn-default btn-xs"><i class="glyphicon glyphicon-lock"></i>Reset Password</a>

                        <a href="#" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-remove"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
