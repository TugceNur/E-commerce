@model FiyakaliOlsun.ViewModels.AuthIndex

<!DOCTYPE html>
<html lang="tr">
<body class="bg-dark">
    <div class="container">
        @if (FiyakaliOlsun.Models.LoginState._RegSuccess)
        {
            <div class="alert alert-success" role="alert">Kayıt olma işlemi tamamlandı. Giriş yaparak devam edebilirsiniz.</div>
        }

        <div class="card card-login mx-auto mt-5">
            <div class="card-header"></div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()
                    <div class="form-group">
                        @Html.LabelFor(x => x.Username)
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Password)
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "" })
                    </div>
                    <input type="submit" value="Login" class="btn btn-primary btn-block" />
                }
                <div class="text-center">
                    <a class="d-block small mt-3" href="@Url.Action("Kayit", "Auth")">Register an Account</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Areas/Admin/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Areas/Admin/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
</body>
</html>
