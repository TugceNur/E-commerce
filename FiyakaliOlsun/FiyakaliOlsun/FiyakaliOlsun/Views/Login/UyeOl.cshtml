@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <!-- section -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <form id="checkout-form" class="clearfix">
                    <div class="col-md-6">
                        <div class="billing-details">

                            <div class="section-title">
                                <h3 class="title">Kayıt Formu</h3>
                            </div>
                            <div class="form-group">
                                <input class="input" type="text" name="f-name" placeholder="Adınız">
                            </div>
                            <div class="form-group">
                                <input class="input" type="text" name="l-name" placeholder="Soyadınız">
                            </div>
                            <div class="form-group">
                                <input class="input" type="email" name="email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input class="input" type="text" name="password" placeholder="Şifre">
                            </div>
                            <div class="form-group">
                                <input class="input" type="text" name="address" placeholder="Adres">
                            </div>
                            <div class="form-group">
                                <input class="input" type="text" name="city" placeholder="Şehir">
                            </div>
                            <div class="form-group">
                                <input class="input" type="text" name="country" placeholder="Ülke">
                            </div>
                            <div class="form-group">
                                <input class="input" type="tel" name="tel" placeholder="Telefon">
                            </div>
                            <div class="form-group">
                                <div class="input-checkbox">
                                    <input type="checkbox" id="register">
                                    <label class="font-weak" for="register">Kayıt ol</label>
                                    <div class="caption">
                                        <p>
                                            Aramıza katıldığınız için teşekkür ederiz. <br />
                                            Giriş yapınız.
                                        <p>
                                           
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>