@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="section">
    <!-- container -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2 class="title">Ayakkabılar</h2>
                    <div class="pull-right">
                        <div class="product-slick-dots-1 custom-dots"></div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 col-xs-6">
                <div class="banner banner-2">
                    <img src="~/Content/img/banner02.jpg" alt="">
                    <div class="banner-caption">
                        

                    </div>
                </div>
            </div>

            <div class="col-md-9 col-sm-6 col-xs-6">
                <div class="row">
                    <div id="product-slick-1" class="product-slick">

                        <div class="product product-single">
                            <div class="product-thumb">
                                <div class="product-label">
                                    <span>Yeni</span>
                                   
                                </div>

                                <button class="main-btn quick-view"><i class="fa fa-search-plus"></i> Görüntüle</button>
                                <img src="~/Content/img/product05.jpg" alt="">
                            </div>
                            <div class="product-body">
                                <h3 class="product-price">$32.50 <del class="product-old-price">$45.00</del></h3>
                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o empty"></i>
                                </div>
                                <h2 class="product-name"><a href="#">Çizme</a></h2>
                                <div class="product-btns">
                                    <button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
                                    
                                    <button class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i> Ekle</button>
                                </div>
                            </div>
                        </div>

                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>